<div class="container">
<h1>New game</h1>
<div class="inline-block">
<ul class="list-inline">
  <% @letters.each do |letter| %>
    <li class="list-inline-item" id="letter"><%= letter %></li>
  <% end %>
</ul>
<p>What's the longest word you can find?</p>
<form action="/score" method="post">
  <input type="text" name="word" value="<%= params[:word] %>">
  <input type="submit" value="Play" id="play-button">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token, @letters %>
</form>
</div>
